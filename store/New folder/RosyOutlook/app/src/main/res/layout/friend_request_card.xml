<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#BFFFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/profilepicFR"
            android:layout_width="61dp"
            android:layout_height="56dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/defaultpic" />

        <ImageView
            android:id="@+id/acceptFR"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/rejectFR"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/accept" />

        <ImageView
            android:id="@+id/rejectFR"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/reject" />

        <TextView
            android:id="@+id/nameFR"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="name"
            app:layout_constraintStart_toEndOf="@+id/profilepicFR"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/usernameFR"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="15dp"
            android:text="username"
            app:layout_constraintStart_toEndOf="@+id/profilepicFR"
            app:layout_constraintTop_toBottomOf="@+id/nameFR" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>